<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="category_index" path="/category" methods="GET">
        <default key="_controller">App\Controller\CategoryController::index</default>
    </route>

    <route id="category_show" path="/category/{id}" methods="GET">
        <default key="_controller">App\Controller\CategoryController::show</default>
    </route>

    <route id="category_create" path="/category" methods="POST">
        <default key="_controller">App\Controller\CategoryController::create</default>
    </route>

    <route id="category_update" path="/category/{id}" methods="PUT">
        <default key="_controller">App\Controller\CategoryController::update</default>
    </route>

    <route id="category_delete" path="/category/{id}" methods="DELETE">
        <default key="_controller">App\Controller\CategoryController::delete</default>
    </route>
</routes>
